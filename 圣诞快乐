        function createSnowflakes() {
            const container = document.getElementById('snow-container');
            const snowflakeCount = 120; // è°ƒæ•´é›ªèŠ±æ•°é‡

            for (let i = 0; i < snowflakeCount; i++) {
                const snowflake = document.createElement('div');
                snowflake.innerHTML = 'â„ï¸'; // ä½¿ç”¨ â„ï¸ å­—ç¬¦
                snowflake.className = 'snowflake';
                
                // éšæœºåˆå§‹ä½ç½®å’Œå¤§å°
                const size = Math.random() * 8 + 10; // 10px åˆ° 18px
                snowflake.style.fontSize = `${size}px`;
                snowflake.style.left = `${Math.random() * 100}%`;
                snowflake.style.top = `-${size}px`; // ä»å±å¹•ä¸Šæ–¹ä¸€ç‚¹ç‚¹å¼€å§‹
                snowflake.style.opacity = Math.random() * 0.3 + 0.7; // éšæœºé€æ˜åº¦
                
                container.appendChild(snowflake);

                // ä¸ºæ¯ä¸ªé›ªèŠ±å¯åŠ¨ç‹¬ç«‹çš„åŠ¨ç”»å¾ªç¯
                animateSnowflake(snowflake, size);
            }
        }

        // é›ªèŠ±åŠ¨ç”»å‡½æ•° - æŒç»­å¾ªç¯ä¸‹è½ï¼Œå‡å°‘æ‘‡æ™ƒ
        function animateSnowflake(snowflake, size) {
            const fallDuration = Math.random() * 10 + 15; // éšæœºä¸‹é™æ—¶é—´ (15s - 25s)
            // æ˜¾è‘—å‡å°æ‘‡æ‘†å¹…åº¦
            const swayAmplitude = Math.random() * 15 + 5; // éšæœºæ‘†åŠ¨å¹…åº¦ (5px - 20px)ï¼Œæ¯”ä¹‹å‰å°å¾ˆå¤š
            const swayDuration = Math.random() * 6 + 4; // éšæœºæ‘†åŠ¨å‘¨æœŸ (4s - 10s)

            let startTime = Date.now();
            let startTop = parseFloat(snowflake.style.top);
            let startLeft = parseFloat(snowflake.style.left);

            function update() {
                const elapsed = (Date.now() - startTime) / 1000; // è½¬æ¢ä¸ºç§’

                // è®¡ç®—å‚ç›´ä½ç½® (ä¸‹è½)
                let newTop = startTop + (window.innerHeight + size) * (elapsed / fallDuration);
                
                // è®¡ç®—æ°´å¹³ä½ç½® (è½»å¾®å·¦å³æ‘†åŠ¨)
                let newLeft = startLeft + swayAmplitude * Math.sin(elapsed * (2 * Math.PI) / swayDuration);

                // å¦‚æœé›ªèŠ±è½å‡ºå±å¹•åº•éƒ¨ï¼Œé‡ç½®åˆ°é¡¶éƒ¨
                if (newTop > window.innerHeight) {
                    startTop = -size; // é‡ç½®åˆ°é¡¶éƒ¨
                    startTime = Date.now(); // é‡ç½®æ—¶é—´
                    startLeft = newLeft; // ä¿æŒå½“å‰æ°´å¹³ä½ç½®ä½œä¸ºæ–°èµ·ç‚¹
                    newTop = startTop; // ç«‹å³æ›´æ–°top
                }

                snowflake.style.top = `${newTop}px`;
                snowflake.style.left = `${newLeft}%`; // left ä¿æŒç™¾åˆ†æ¯”
                // å¯é€‰ï¼šæ·»åŠ è½»å¾®æ—‹è½¬ï¼Œä½†æ—‹è½¬é€Ÿåº¦è¦æ…¢ï¼Œå¢åŠ è‡ªç„¶æ„Ÿ
                snowflake.style.transform = `rotate(${elapsed * 10}deg)`; // æ—‹è½¬é€Ÿåº¦é™ä½

                requestAnimationFrame(update);
            }

            requestAnimationFrame(update);
        }
        
